        <link rel="stylesheet" href="/css/app.css">
</head>

<body>
    <nav class="navbar navbar-expand-md navbar-light container mx-auto flex items-center justify-between py-4">
        <a class="navbar-brand" href="/">
            <img src="/img/2.png" style="height: 50px;" class="logo-image" alt="durga fast food logo">
        </a>

        <!-- Collapse button -->
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#basicExampleNav1"
            aria-controls="basicExampleNav1" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <!-- Links -->
        <div class="collapse navbar-collapse" id="basicExampleNav1">

            <!-- Right -->
            <ul class="flex items-center navbar-nav ml-auto">
                <li class="ml-6 nav-item"><a href="/" class="nav-link waves-effect">Menu</a></li>
                <% if(user) { %>
                    <% if(user.role==="customer" ){ %>
                        <li class="ml-6" nav-item><a href="/customer/orders" class="nav-link waves-effect">Orders</a>
                        </li>
                        <% } else { %>
                            <li class="ml-6" nav-item><a href="/admin/orders" class="nav-link waves-effect">Orders</a>
                            </li>
                            <% } %>
                                <li class="ml-6" nav-item>
                                    <form id="logout" action="/logout" method="POST">
                                        <a onclick="document.getElementById('logout').submit()" href="#"
                                            class="nav-link waves-effect">Logout</a>
                                    </form>
                                </li>
                                <% } else { %>
                                    <li class="ml-6"><a href="/register" class="nav-link waves-effect">Register</a></li>
                                    <li class="ml-6"><a href="/login" class="nav-link waves-effect">Login</a></li>
                                    <% } %>
                                        <li class="ml-6" nav-item><a href="/cart"
                                                class="nav-link waves-effect inline-block px-4 py-2 rounded-full flex items-center">
                                                <span id="cartCounter" class="text-white font-bold pr-2">
                                                    <%= session.cart ? session.cart.totalQty : '' %>
                                                </span>
                                                <img src="/img/cart.png" alt="">
                                            </a></li>
            </ul>
        </div>
    </nav>
    <%- body %>

    <!-- Footer -->
   <footer class="page-footer font-small mdb-color pt-4" style="background-color: #F8F8F8;">
  
